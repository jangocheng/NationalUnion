@using NationalUnion.Application.ViewModels
@{
    Layout = null;
}
<html>
<head>
    <title>全民联盟后台管理系统</title>
    <meta name="viewport" content="width=device-width" />
    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.easyui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tree.js")" type="text/javascript"></script>
    @Scripts.Render("~/bundles/home")
    <link href="~/Content/tree/css/tree.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/bootstrap/css")
</head>
<body class="easyui-layout">
    <div id="OverTimeLogin" class="easyui-dialog" data-options="closed:true,modal:true">
        <iframe width="726px" scrolling="no" height="497px" frameborder="0" id="iOverTimeLogin"></iframe>
    </div>
    <div data-options="region:'north',border:false,split:true" style="height: 65px; width: 100%;">
        <div class="define-head">
            <div class="define-logo">
                @*<div id="LoginTopLine"></div>
                    <div id="LoginBottomLine"></div>*@
            </div>
            <div class="define-account">
                <span>@ViewData["Manager"] 欢迎您</span>
                <br />
                <a id="LoginOut" href="javascript:void(0)" class="l-btn-plain">退出</a>
            </div>
        </div>
    </div>
    <div data-options="region:'west',split:true,title:'菜单列表'" style="width: 200px; height: 100%; padding-top: 2px; background-color: #fff; overflow: auto">
        @*<div id="RightTree" style="background-color: #fff;">
            <div class="panel-loading">Loading...</div>
        </div>*@

        <div id="RightAccordion" class="easyui-accordion"></div>
    </div>
    <div data-options="region:'south',border:false" style="height: 20px;">
        <div class="define-bottom">
        </div>
    </div>
    <div data-options="region:'center',border:false">
        <div id="mainTab" class="easyui-tabs" data-options="fit:true">
            <div title="完善信息" data-options="closable:true" style="overflow: hidden; background: #fff">
                <iframe scrolling="auto" frameborder="0" src="AccountPerfect" style="width: 100%; height: 100%;"></iframe>
            </div>
        </div>
    </div>
    <div id="tab_menu" class="easyui-menu" style="width: 150px;">
        <div id="tab_menu-tabrefresh" data-options="iconCls:'icon-reload'">
            刷新
        </div>
        <div id="tab_menu-openFrame">
            在新窗体打开
        </div>
        <div id="tab_menu-tabcloseall">
            关闭所有
        </div>
        <div id="tab_menu-tabcloseother">
            关闭其他标签页
        </div>
        <div class="menu-sep">
        </div>
        <div id="tab_menu-tabcloseright">
            关闭右边
        </div>
        <div id="tab_menu-tabcloseleft">
            关闭左边
        </div>
        <div id="tab_menu-tabclose" data-options="iconCls:'icon-remove'">
            关闭
        </div>
        <div id="menu" class="easyui-menu" style="width: 150px;">
        </div>
    </div>
</body>
</html>

<script type="text/javascript">
    $(function () {
        $("#LoginOut").click(function () {
            loginOut();
        });

        function loginOut() {
            $.post('/Home/AccountLoginOut',
                function (msg) {
                    if (msg.Res) {
                        window.location = "/Home/AccountLogin";
                    }
                }, "json");
        }

        //$("#RightAccordion").accordion({
        //    collapsible: true,
        //    active: pos
        //});
    });
</script>
